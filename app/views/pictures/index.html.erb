<div class="pic_top">
</div>

<% @pictures.each do |picture| %>
<div class="pic">
    <div class="">
        <div class="carousel-inner">
          <div class="item active">
            <%=image_tag picture.url+".jpg"%>
            <div class="carousel-caption">
              <h4>
               <%= picture.name %>
              </h4>
              <p>
               <%= picture.introduce %>
              </p>
            </div>
          </div>
        </div>
    </div>   
</div>

<% end %>

<h1>Listing pictures</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Url</th>
    <th>Introduce</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.name %></td>
    <td><%= picture.url %></td>
    <td><%= picture.introduce %></td>
    <td><%= link_to 'Show', picture %></td>
    <td><%= link_to 'Edit', edit_picture_path(picture) %></td>
    <td><%= link_to 'Destroy', picture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

